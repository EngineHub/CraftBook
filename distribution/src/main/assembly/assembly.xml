<?xml version="1.0" encoding="UTF-8"?>
<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>release</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>tar.gz</format>
        <format>tar.bz2</format>
        <format>zip</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>com.sk89q.craftbook:common</include>
            </includes>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <unpack>false</unpack>
            <outputFileNameMapping>CraftBook.jar</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>com.sk89q.craftbook:mechanisms</include>
            </includes>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <unpack>false</unpack>
            <outputFileNameMapping>CraftBookMechanisms.jar</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>com.sk89q.craftbook:circuits</include>
            </includes>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <unpack>false</unpack>
            <outputFileNameMapping>CraftBookCircuits.jar</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>com.sk89q.craftbook:vehicles</include>
            </includes>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <unpack>false</unpack>
            <outputFileNameMapping>CraftBookVehicles.jar</outputFileNameMapping>
        </dependencySet>
    </dependencySets>
    <files>
        <file>
            <source>${basedir}/../README.html</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${basedir}/../</directory>
            <includes>
                <include>LICENSE.txt</include>
                <include>CHANGELOG.txt</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>